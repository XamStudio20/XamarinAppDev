<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Demo2.LoginPage">
    <ContentPage.Content>
        <StackLayout Spacing="40" Padding="10,50">
            <Frame CornerRadius="20" BackgroundColor="DarkBlue">
                <StackLayout>
                    <StackLayout Padding="10">
                        <Entry TextColor="White" PlaceholderColor="White" Placeholder="Enter UserName"></Entry>
                    </StackLayout>
                    <StackLayout Padding="10">
                        <Entry TextColor="White" IsPassword="True" PlaceholderColor="White" Placeholder="Enter Password"></Entry>
                    </StackLayout>
                    <StackLayout Padding="10">
                        <Button Text="Login"></Button>
                    </StackLayout>
                </StackLayout>

            </Frame>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>